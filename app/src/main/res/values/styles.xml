<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDefault</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorToolbarColor">@color/colorGold</item>
        <item name="colorBackground">@android:color/white</item>
        <item name="colorText">@android:color/black</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDeepYellow</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorToolbarColor">@color/colorDeepGold</item>
        <item name="colorBackground">@android:color/black</item>
        <item name="colorText">@android:color/white</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="TextBlackBold">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlackNormal">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
